<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout android:gravity="center_horizontal" android:id="@+id/staff_layout" android:paddingLeft="10.0dip" android:paddingRight="10.0dip" android:layout_width="fill_parent" android:layout_height="0.0dip" android:layout_weight="8.0">
        <ImageView android:id="@+id/staff" android:layout_gravity="center_horizontal|center_vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" />
        <ImageView android:id="@+id/clef"  android:layout_gravity="center_horizontal|center_vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" />
        <ImageView android:id="@+id/note"  android:layout_gravity="center_horizontal|center_vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_vertical" >

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip" />

            <TextView
                android:id="@+id/time_elapsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="TextView"
                android:textSize="18sp" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout android:orientation="vertical" android:id="@+id/keys_layout" android:padding="10.0dip" android:layout_width="fill_parent" android:layout_height="0.0dip" android:layout_weight="4.0">

        <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="0.0dip" android:layout_weight="1.0">
            <Button android:id="@+id/keyC" android:layout_width="0.0dip" android:layout_height="fill_parent" android:text="C" android:layout_weight="1.0" android:onClick="onKeyC"/>
            <Button android:id="@+id/keyD" android:layout_width="0.0dip" android:layout_height="fill_parent" android:text="D" android:layout_weight="1.0" android:onClick="onKeyD"/>
            <Button android:id="@+id/keyE" android:layout_width="0.0dip" android:layout_height="fill_parent" android:text="E" android:layout_weight="1.0" android:onClick="onKeyE"/>
            <Button android:id="@+id/keyF" android:layout_width="0.0dip" android:layout_height="fill_parent" android:text="F" android:layout_weight="1.0" android:onClick="onKeyF"/>
            </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="0.0dip" android:weightSum="4.0" android:layout_weight="1.0">
            <Button android:id="@+id/keyG" android:layout_width="0.0dip" android:layout_height="fill_parent" android:text="G" android:layout_weight="1.0" android:onClick="onKeyG"/>
            <Button android:id="@+id/keyA" android:layout_width="0.0dip" android:layout_height="fill_parent" android:text="A" android:layout_weight="1.0" android:onClick="onKeyA"/>
            <Button android:id="@+id/keyB" android:layout_width="0.0dip" android:layout_height="fill_parent" android:text="B" android:layout_weight="1.0" android:onClick="onKeyB"/>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
